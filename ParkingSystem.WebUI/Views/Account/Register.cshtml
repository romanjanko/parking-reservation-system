@model ParkingSystem.WebUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h4>Create a new account.</h4>
<p>
    Enter your company's email address and your new password. An email with further instructions will be sent to you.
</p>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        {
            <div class="row">
                <div class="col-sm-offset-4 col-sm-4">
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-envelope-o fa-fw"></span></span>
                    @Html.TextBoxFor(m => m.EmailAddress,
                                     htmlAttributes: new
                                     {
                                         @class = "form-control",
                                         placeholder = "Email address"
                                     })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-key fa-fw"></span></span>
                    @Html.PasswordFor(m => m.NewPassword,
                                      htmlAttributes: new
                                      {
                                          @class = "form-control",
                                          placeholder = "New password"
                                      })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-key fa-fw"></span></span>
                    @Html.PasswordFor(m => m.ConfirmNewPassword,
                                      htmlAttributes: new
                                      {
                                          @class = "form-control",
                                          placeholder = "Confirm new password"
                                      })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <p class="text-center">
                    <input type="submit" value="Register" class="btn btn-primary btn-lg" />
                </p>
            </div>
        </div>
    </div>
}
