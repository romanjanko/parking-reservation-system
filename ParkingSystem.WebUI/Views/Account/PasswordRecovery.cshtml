@model ParkingSystem.WebUI.Models.PasswordRecoveryViewModel

@{
    ViewBag.Title = "Password Recovery";
}

<h4>Password recovery.</h4>
<p>
    Enter your email address. An email with further instructions will be sent to you.
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        {
            <div class="row">
                <div class="col-sm-offset-4 col-sm-4">
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-envelope-o fa-fw"></span></span>
                    @Html.TextBoxFor(m => m.EmailAddress,
                                     htmlAttributes: new
                                     {
                                         @class = "form-control",
                                         placeholder = "Email address"
                                     })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <p class="text-center">
                    <input type="submit" value="Continue" class="btn btn-primary btn-lg" />
                </p>
            </div>
        </div>
    </div>
}